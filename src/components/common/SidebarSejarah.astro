// src/components/common/SidebarSejarah.astro
---

<aside class="w-64 bg-white border-r border-gray-200 h-screen overflow-y-auto">
  <div class="px-6 py-4">
    <!-- Logo -->
    <div class="flex items-center space-x-3">
      <img src="/favicon.ico" alt="Logo Edukasi" class="h-8 w-8" />
      <div>
        <h2 class="text-xl font-semibold text-gray-800">Sejarah Alkitab</h2>
        <p class="text-gray-700">sekolahteologi.com</p>
      </div>
    </div>
  </div>

  <nav class="mt-6 px-4">
    <div class="space-y-2">
      <div class="space-y-2">
        <!-- Menu Items -->
        <a
          href="/"
          class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group">
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7m-9 13V9m0 13h6a2 2 0 002-2v-7h2a2 2 0 002-2V9.5a2 2 0 00-.586-1.414l-7-7a2 2 0 00-2.828 0l-7 7A2 2 0 003 9.5V12a2 2 0 002 2h2v7a2 2 0 002 2z"
            ></path>
          </svg>
          Home
        </a>

        <a
          href="/edukasi"
          class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group">
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 14l9-5-9-5-9 5 9 5z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
            ></path>
          </svg>
          Edukasi Teologi
        </a>

        <a
          href="/renungan"
          class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group">
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
          Renungan Kristen
        </a>

        <a
          href="/sejarah"
          class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group">
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Sejarah
        </a>

        <a
          href="/sekolah-minggu"
          class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group">
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
          Sekolah Minggu
        </a>
      </div>

      <!-- Divider -->
      <div class="my-6 border-t border-gray-200"></div>

      <!-- Kategori Sejarah Alkitab -->
      <div class="mb-2 bg-gray-50 py-2">
        <h3
          class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          Periode Sejarah
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/sejarah/patriakh"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Zaman Patriakh
          </a>
          <a
            href="/sejarah/keluaran"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Keluaran dari Mesir
          </a>
          <a
            href="/sejarah/hakim-hakim"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Zaman Hakim-Hakim
          </a>
          <a
            href="/sejarah/kerajaan-bersatu"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Kerajaan Bersatu Israel
          </a>
          <a
            href="/sejarah/kerajaan-terpecah"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Kerajaan Terpecah
          </a>
          <a
            href="/sejarah/pembuangan"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Pembuangan & Restorasi
          </a>
        </div>
      </div>

      <!-- Tokoh-tokoh Penting -->
      <div class="mb-2 bg-gray-100 py-2">
        <h3
          class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          Tokoh Sejarah
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/sejarah/patriakh"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Abraham, Ishak, Yakub
          </a>
          <a
            href="/sejarah/musa"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Musa & Yosua
          </a>
          <a
            href="/sejarah/raja-israel"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Raja-raja Israel
          </a>
          <a
            href="/sejarah/nabi"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Nabi-nabi Besar & Kecil
          </a>
        </div>
      </div>

      <!-- Peristiwa Penting -->
      <div class="mb-2 bg-gray-50 py-2">
        <h3
          class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          Peristiwa Penting
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/sejarah/penciptaan"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Penciptaan & Kejatuhan
          </a>
          <a
            href="/sejarah/air-bah"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Air Bah & Nuh
          </a>
          <a
            href="/sejarah/keluaran"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Keluaran & 10 Perintah
          </a>
          <a
            href="/sejarah/bait-suci"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Pembangunan Bait Suci
          </a>
          <a
            href="/sejarah/pembuangan-babel"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Pembuangan ke Babel
          </a>
        </div>
      </div>

      <!-- Kronologi -->
      <div class="mb-2 bg-gray-100 py-2">
        <h3
          class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          Kronologi & Peta
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/sejarah/timeline"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Timeline Sejarah
          </a>
          <a
            href="/sejarah/peta"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Peta Wilayah
          </a>
          <a
            href="/sejarah/arkeologi"
            class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
            Bukti Arkeologi
          </a>
        </div>
      </div>
    </div>
  </nav>
</aside>
