---
// src/components/common/MobileMenuEdukasi.astro
---

<div>
  <!-- Mobile menu button - hidden by default, show on scroll -->
  <button
    type="button"
    data-menu-button
    class="lg:hidden p-2 rounded-md text-sky-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-sky-500 fixed top-4 left-4 z-50 bg-white shadow-lg border border-gray-200 transition-all duration-300"
    aria-label="Toggle menu">
    <div class="flex items-center">
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <span class="ml-2 font-medium">Menu</span>
    </div>
  </button>

  <!-- Mobile sidebar overlay -->
  <div id="mobile-sidebar" class="lg:hidden hidden fixed inset-0 z-50">
    <!-- Overlay -->
    <div
      class="fixed inset-0 bg-gray-600 bg-opacity-75 transition-opacity duration-300"
      data-close-sidebar>
    </div>

    <!-- Sidebar panel -->
    <div
      class="fixed inset-y-0 left-0 max-w-xs w-full bg-white shadow-xl transition-transform duration-300 transform -translate-x-full">
      <div class="h-full overflow-y-auto">
        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200 bg-white">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <img src="/favicon.ico" alt="Logo Edukasi" class="h-8 w-8" />
              <div>
                <h2 class="text-xl font-semibold text-gray-800">Edukasi</h2>
                <p class="text-gray-700">sekolahteologi.com</p>
              </div>
            </div>
            <button
              type="button"
              class="p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 transition-colors"
              data-close-sidebar
              aria-label="Close menu">
              <svg
                class="h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="mt-6 px-4">
          <div class="space-y-1">
            <!-- Home -->
            <a
              href="/"
              class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group"
              data-close-sidebar>
              <svg
                class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7m-9 13V9m0 13h6a2 2 0 002-2v-7h2a2 2 0 002-2V9.5a2 2 0 00-.586-1.414l-7-7a2 2 0 00-2.828 0l-7 7A2 2 0 003 9.5V12a2 2 0 002 2h2v7a2 2 0 002 2z"
                ></path>
              </svg>
              Home
            </a>

            <!-- edukasi -->
            <a
              href="/edukasi"
              class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group"
              data-close-sidebar>
              <svg
                class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              Edukasi Teologi
            </a>

            <!-- renungan -->
            <a
              href="/renungan"
              class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group"
              data-close-sidebar>
              <svg
                class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Renungan
            </a>

            <!-- sejarah -->
            <a
              href="/sejarah"
              class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group"
              data-close-sidebar>
              <svg
                class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
                ></path>
              </svg>
              Sejarah
            </a>
          </div>

          <!-- Semua Edukasi -->
          <a
            href="/sekolah-minggu"
            class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-sky-50 hover:text-sky-600 transition-colors group"
            data-close-sidebar>
            <svg
              class="w-5 h-5 mr-3 text-gray-400 group-hover:text-sky-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
              ></path>
            </svg>
            Sekolah Minggu
          </a>
        </nav>
        <div class="my-6 border-t border-gray-200"></div>

        <!-- Divider -->
        <div class="my-6 border-t border-gray-200"></div>

        <!-- Kategori -->
        <div class="mb-4">
          <h3
            class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
            Edukasi Teologi
          </h3>
          <div class="mt-2 space-y-1">
            <a
              href="/edukasi/hukum-tuhan"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Hukum Tuhan
            </a>
            <a
              href="/edukasi/keselamatan-dalam-iman-kristen"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Keselamatan Dalam Iman Kristen
            </a>
            <a
              href="/edukasi/dogma-dan-doktrin"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Dogma dan Doktrin
            </a>
            <a
              href="/edukasi/teologi-sistematik"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Teologi Sistematik
            </a>
            <a
              href="/edukasi/teologi-praktis-pastoral"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Teologi Praktis / Pastoral
            </a>
            <a
              href="/edukasi/alkitab"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Alkitab / Kitab Suci
            </a>
            <a
              href="/edukasi/etika-teologis"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Etika Teologis / Moral
            </a>
            <a
              href="/edukasi/perbandingan-agama-dan-teologi-kontekstual"
              class="block px-4 py-2 text-sm text-gray-600 rounded hover:bg-gray-100">
              Perbandingan Agama & Teologi Kontekstual
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Smooth transitions untuk mobile sidebar */
  #mobile-sidebar {
    transition: opacity 0.3s ease-in-out;
  }

  #mobile-sidebar > div:last-child {
    transition: transform 0.3s ease-in-out;
  }

  /* Prevent body scroll when menu is open */
  body.menu-open {
    overflow: hidden;
  }

  /* Class untuk button visible */
  .menu-button-visible {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }
</style>
