---
// src/components/ui/Card.astro
import "../../styles/global.css";
export interface Props {
  img: string;
  altText: string;
  title: string;
  desc: string;
  labelBtn: string;
  url: string;
}

const { img, altText, title, desc, labelBtn, url } = Astro.props;
---

<div class="rounded overflow-hidden shadow-lg bg-white flex flex-col h-full">
  <img
    class="w-full h-48 object-cover"
    src={img}
    alt={altText}
    width={400}
    height={192}
  />
  <div class="px-4 py-4 flex-1">
    <h2 class="text-xl font-bold mb-2 text-gray-800">{title}</h2>
    <p class="text-gray-700 text-base leading-relaxed">{desc}</p>
  </div>
  <div class="px-4 py-3">
    <a
      href={url}
      class="inline-block bg-sky-600 text-white py-2 px-4 rounded hover:bg-sky-800 transition-colors duration-200 text-center"
    >
      {labelBtn}
    </a>
  </div>
</div>