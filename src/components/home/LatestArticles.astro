---
export interface Props {
  articles: Array<{
    id: number;
    title: string;
    excerpt: string;
    category: string;
    readTime: string;
    date: string;
    image: string;
    url: string;
  }>;
}

const { articles } = Astro.props;
---

<div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
  {articles.map((article) => (
    <article class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 group border border-gray-100">
      <div class="h-48 bg-gradient-to-br from-sky-400 to-blue-500 relative overflow-hidden">
        <!-- Placeholder untuk gambar -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        <div class="absolute top-4 left-4">
          <span class="bg-white/90 text-sky-600 px-3 py-1 rounded-full text-sm font-semibold">
            {article.category}
          </span>
        </div>
      </div>
      
      <div class="p-6">
        <div class="flex justify-between items-center mb-3">
          <span class="text-gray-500 text-sm">{article.readTime}</span>
          <span class="text-gray-500 text-sm">{new Date(article.date).toLocaleDateString('id-ID')}</span>
        </div>
        
        <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-sky-600 transition-colors duration-300 line-clamp-2">
          {article.title}
        </h3>
        
        <p class="text-gray-600 mb-4 line-clamp-3">
          {article.excerpt}
        </p>
        
        <a 
          href={article.url}
          class="inline-flex items-center text-sky-600 font-semibold hover:text-sky-700 transition-colors duration-300 group/readmore"
        >
          Baca Selengkapnya
          <span class="ml-2 group-hover/readmore:translate-x-1 transition-transform duration-300">â†’</span>
        </a>
      </div>
    </article>
  ))}
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>