<div class="relative bg-gradient-to-r from-sky-600 to-sky-800 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-black/10"></div>
  
  <div class="relative container mx-auto px-4 py-20 md:py-24">
    <div class="max-w-4xl mx-auto text-center animate-fade-in-up">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        Edukasi Teologi
        <span class="block text-sky-100">Gratis & Alkitabiah</span>
      </h1>
      
      <p class="text-xl md:text-2xl mb-8 text-sky-100 max-w-3xl mx-auto leading-relaxed">
        Tingkatkan pengertian Firman Tuhan melalui renungan harian, artikel rohani, 
        dan pembelajaran teologi yang mendalam - <span class="font-semibold text-white">100% Gratis</span>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/edukasi" 
          class="bg-white text-sky-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-sky-50 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          Mulai Belajar Sekarang
        </a>
        <a 
          href="/renungan" 
          class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white/10 transition-all duration-300"
        >
          Baca Renungan Hari Ini
        </a>
      </div>
      
      <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-white">500+</div>
          <div class="text-sky-100">Konten Edukasi</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-white">100%</div>
          <div class="text-sky-100">Gratis Selamanya</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-white">24/7</div>
          <div class="text-sky-100">Akses Online</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-white">1000+</div>
          <div class="text-sky-100">Pembaca Aktif</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Wave Divider -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" class="fill-current text-white">
