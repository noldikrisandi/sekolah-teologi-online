---
export interface Props {
  categories: Array<{
    name: string;
    description: string;
    icon: string;
    count: string;
    url: string;
    color: string;
  }>;
}

const { categories } = Astro.props;
---

<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
  {categories.map((category, index) => (
    <a 
      href={category.url}
      class="group bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100"
    >
      <div class={`w-12 h-12 rounded-xl bg-gradient-to-r ${category.color} flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300`}>
        <span class="text-2xl">{category.icon}</span>
      </div>
      
      <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-sky-600 transition-colors duration-300">
        {category.name}
      </h3>
      
      <p class="text-gray-600 text-sm mb-4 leading-relaxed">
        {category.description}
      </p>
      
      <div class="flex justify-between items-center">
        <span class="text-sky-600 font-semibold text-sm">{category.count}</span>
        <span class="text-sky-600 group-hover:translate-x-1 transition-transform duration-300">â†’</span>
      </div>
    </a>
  ))}
</div>