---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import MetaTags from "../components/seo/MetaTags.astro";
import SchemaMarkup from "../components/seo/SchemaMarkup.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: string;
  // Tambah props untuk schema
  articles?: Array<any>;
  breadcrumbs?: Array<any>;
}

const {
  title = "Sekolah Teologi - Pembelajaran Alkitab yang Alkltabiah",
  description = "Sekolah Teologi terbaik untuk memperdalam pengertian Firman Tuhan, studi alkitab, dan pertumbuhan rohani yang alkitabiah",
  image = "/images/default-og-image.webp",
  url = "",
  type = "website",
  articles = [],
  breadcrumbs = [],
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Meta Tags -->
    <MetaTags
      title={title}
      description={description}
      image={image}
      url={`https://sekolahteologi.com/${url}`}
      type={type}
    />
    <link rel="canonical" href={`https://sekolahteologi.com/${url}`} />

    <!-- Schema Markup -->
    <SchemaMarkup
      pageType={type === "article" ? "Article" : "WebPage"}
      pageUrl={`https://sekolahteologi.com/${url}`}
      articles={articles}
      breadcrumbs={breadcrumbs}
    />
  </head>

  <body class="font-sans antialiased min-h-screen flex flex-col bg-gray-50">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>