const renunganData = {
  title: "Renungan Harian, 11 November 2025 - Berkat Sesungguhnya dari Tuhan",
  author: "Noldi Krisandi",
  image: "/images/banner/diberkati-tuhan.webp",
  imageAlt: "seseorang yang diberkati Tuhan dari langit dengan Roh Kudus yang menyerupai burung merpati",
  description: "Renungan harian Kristen 11 November 2025 tentang makna berkat sesungguhnya dari Tuhan. Pelajari bagaimana berkat Tuhan menghasilkan damai sejahtera dan 3 langkah praktis untuk menerimanya dalam kehidupan sehari-hari.",
  publishedDate: "2025-11-11T08:00:00+07:00",
  modifiedDate: "2025-11-11T08:00:00+07:00",
  category: "renungan harian kristen",
  scripture: ["Amsal 12:11", "Yeremia 29:11", "Filipi 4:6-7", "Amsal 6:6-8"]
