const renunganData = {
  title: "Renungan Harian, 6 November 2025 - Selalu Hidup dalam Kesejahteraan Sesuai Janji Tuhan",
  author: "Noldi Krisandi",
  image: "/images/banner/diberkati-tuhan.webp",
  imageAlt: "seseorang yang mendapatkan berkat kesejahteraan dari Tuhan",
  description: "Renungan hari ini, 6 November 2025 tentang bagaimana hidup dalam kesejahteraan sesuai janji Tuhan. Pelajari tiga langkah praktis: rajin bekerja, berdoa dengan pengharapan, dan menabung dengan hikmat Tuhan.",
  publishedDate: "2025-11-06T08:00:00+07:00",
  modifiedDate: "2025-11-06T08:00:00+07:00",
  category: "renungan harian kristen",
  scripture: ["Amsal 12:11", "Amsal 14:23", "2 Tesalonika 3:10", "Yeremia 29:11", "Filipi 4:6-7", "Amsal 6:6-8"]
