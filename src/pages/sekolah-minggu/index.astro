---
// src/pages/sekolahminggu/index.astro
import SekolahMingguLayout from "../../layouts/SekolahMingguLayout.astro";

// Data untuk SEO dan konten
const pageData = {
  title: "Sekolah Minggu - Materi Pendidikan Kristen untuk Anak Semua Usia",
  description:
    "Temukan materi sekolah minggu lengkap untuk balita, anak-anak, dan remaja. Cerita Alkitab menarik, aktivitas kreatif, ayat hafalan, dan panduan guru untuk membangun iman generasi muda.",
  image: "/images/banner/sekolah-minggu.webp",
};

// Data artikel untuk schema
const articles = [
  {
    title: "Cerita Penciptaan untuk Anak Balita",
    description:
      "Mengajarkan tentang kasih Tuhan melalui cerita penciptaan yang sederhana dan menarik",
    url: "/sekolah-minggu/penciptaan-balita",
    image: "/images/sekolah-minggu/penciptaan.webp",
    datePublished: "2024-01-15",
    author: "Tim Sekolah Teologi",
  },
  {
    title: "Aktivitas Kreatif Cerita Nuh dan Air Bah",
    description: "Kerajinan tangan dan permainan edukatif tentang ketaatan Nuh",
    url: "/sekolah-minggu/aktivitas-nuh",
    image: "/images/sekolah-minggu/nuh.webp",
    datePublished: "2024-01-20",
    author: "Tim Sekolah Teologi",
  },
  {
    title: "Panduan Mengajar untuk Kelas Remaja",
    description:
      "Strategi efektif mengajar remaja dengan topik-topik yang relevan",
    url: "/sekolah-minggu/panduan-remaja",
    image: "/images/sekolah-minggu/remaja.webp",
    datePublished: "2024-01-25",
    author: "Tim Sekolah Teologi",
  },
];

// Breadcrumbs untuk schema
const breadcrumbs = [
  { name: "Home", url: "https://sekolahteologi.com/" },
  { name: "Sekolah Minggu", url: "https://sekolahteologi.com/sekolah-minggu" },
];
---

<SekolahMingguLayout
  title={pageData.title}
  description={pageData.description}
  image={pageData.image}
  url="sekolah-minggu"
  type="website"
  articles={articles}
  breadcrumbs={breadcrumbs}>
  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-blue-900 to-blue-800 text-white py-16 rounded-2xl mb-12">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
        Sekolah Minggu
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100 leading-relaxed">
        Membangun Iman Anak-anak dalam Kasih Kristus
      </p>
      <p class="text-lg text-blue-200 max-w-3xl mx-auto leading-relaxed">
        Sumber materi sekolah minggu terbaik untuk semua usia anak. Dari cerita
        Alkitab yang menarik hingga aktivitas kreatif, kami menyediakan segala
        yang dibutuhkan untuk membimbing anak-anak mengenal Tuhan Yesus.
      </p>
    </div>
    </section>

    <!-- Benefits Section -->
    <section class="mb-16">
      <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200">
        <h2 class="text-3xl font-bold text-sky-800 mb-6 text-center">
          Mengapa Memilih Materi Kami?
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="text-center">
            <div
              class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg
                class="w-8 h-8 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Alkitabiah</h3>
            <p class="text-gray-600">
              Semua materi berdasarkan kebenaran Firman Tuhan yang alkitabiah
            </p>
          </div>

          <div class="text-center">
            <div
              class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg
                class="w-8 h-8 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              Usia Sesuai
            </h3>
            <p class="text-gray-600">
              Materi disesuaikan dengan perkembangan setiap kelompok usia
            </p>
          </div>

          <div class="text-center">
            <div
              class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg
                class="w-8 h-8 text-purple-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Kreatif</h3>
            <p class="text-gray-600">
              Aktivitas dan metode mengajar yang menarik dan menyenangkan
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Age Groups Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
        Materi untuk Semua Usia
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Balita -->
        <div
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-pink-200 hover:shadow-xl transition-shadow duration-300">
          <div class="bg-pink-500 text-white p-4 text-center">
            <h3 class="text-xl font-bold">Balita</h3>
            <p class="text-pink-100">2-4 tahun</p>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Pengenalan sederhana tentang kasih Tuhan melalui cerita dan
              aktivitas sensorik
            </p>
            <ul class="text-sm text-gray-600 space-y-2 mb-4">
              <li>• Cerita Alkitab sederhana</li>
              <li>• Aktivitas sensorik</li>
              <li>• Lagu-lagu anak</li>
              <li>• Waktu bermain terstruktur</li>
            </ul>
            <a
              href="/sekolah-minggu/balita"
              class="block w-full bg-pink-500 text-white text-center py-2 rounded-lg hover:bg-pink-600 transition-colors">
              Jelajahi Materi
            </a>
          </div>
        </div>

        <!-- PAUD -->
        <div
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-blue-200 hover:shadow-xl transition-shadow duration-300">
          <div class="bg-blue-500 text-white p-4 text-center">
            <h3 class="text-xl font-bold">PAUD</h3>
            <p class="text-blue-100">4-6 tahun</p>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Membangun dasar iman melalui cerita interaktif dan kerajinan
              kreatif
            </p>
            <ul class="text-sm text-gray-600 space-y-2 mb-4">
              <li>• Cerita Alkitab interaktif</li>
              <li>• Kerajinan kreatif</li>
              <li>• Ayat hafalan sederhana</li>
              <li>• Permainan edukatif</li>
            </ul>
            <a
              href="/sekolah-minggu/paud"
              class="block w-full bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-600 transition-colors">
              Jelajahi Materi
            </a>
          </div>
        </div>

        <!-- Kelas Kecil -->
        <div
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-green-200 hover:shadow-xl transition-shadow duration-300">
          <div class="bg-green-500 text-white p-4 text-center">
            <h3 class="text-xl font-bold">Kelas Kecil</h3>
            <p class="text-green-100">7-9 tahun</p>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">
              Mengembangkan pemahaman alkitab melalui diskusi dan aplikasi
              praktis
            </p>
            <ul class="text-sm text-gray-600 space-y-2 mb-4">
              <li>• Studi Alkitab mendalam</li>
              <li>• Diskusi kelompok</li>
              <li>• Aplikasi kehidupan</li>
              <li>• Proyek pelayanan</li>
            </ul>
            <a
              href="/sekolah-minggu/kelas-kecil"
              class="block w-full bg-green-500 text-white text-center py-2 rounded-lg hover:bg-green-600 transition-colors">
              Jelajahi Materi
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Materials -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
        Materi Unggulan
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Cerita Alkitab -->
        <article
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
          <img
            src="/images/sekolah-minggu/cerita-alkitab.webp"
            alt="Cerita Alkitab untuk Anak"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-3">Cerita Alkitab</h3>
            <p class="text-gray-600 mb-4">
              Kumpulan cerita Alkitab yang disajikan dengan bahasa yang mudah
              dipahami anak-anak...
            </p>
            <a
              href="/sekolah-minggu/cerita-alkitab"
              class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
              Lihat Cerita
              <svg
                class="w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>

        <!-- Aktivitas & Kerajinan -->
        <article
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
          <img
            src="/images/sekolah-minggu/aktivitas.webp"
            alt="Aktivitas & Kerajinan"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-3">
              Aktivitas & Kerajinan
            </h3>
            <p class="text-gray-600 mb-4">
              Ide kreatif untuk mengajar melalui kerajinan tangan dan permainan
              yang menyenangkan...
            </p>
            <a
              href="/sekolah-minggu/aktivitas"
              class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
              Lihat Aktivitas
              <svg
                class="w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>

        <!-- Panduan Guru -->
        <article
          class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
          <img
            src="/images/sekolah-minggu/panduan-guru.webp"
            alt="Panduan Guru"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-3">Panduan Guru</h3>
            <p class="text-gray-600 mb-4">
              Resources lengkap untuk guru sekolah minggu, dari rencana mengajar
              hingga tips...
            </p>
            <a
              href="/sekolah-minggu/panduan-guru"
              class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
              Lihat Panduan
              <svg
                class="w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      </div>
    </section>

    <!-- For Parents & Teachers -->
    <section class="mb-16">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Untuk Orang Tua -->
        <div
          class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-8 border border-blue-200">
          <div class="flex items-center mb-4">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg
                class="w-6 h-6 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-blue-800">Untuk Orang Tua</h3>
          </div>
          <p class="text-gray-700 mb-4">
            Sumber daya untuk membantu orang tua dalam membimbing anak-anak
            tumbuh dalam iman di rumah.
          </p>
          <ul class="space-y-2 mb-6">
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Bahan pengasuhan Kristen
            </li>
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Aktivitas keluarga
            </li>
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Panduan doa keluarga
            </li>
          </ul>
          <a
            href="/sekolah-minggu/untuk-orangtua"
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
            Jelajahi untuk Orang Tua
            <svg
              class="w-4 h-4 ml-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Untuk Guru -->
        <div
          class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 border border-green-200">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-3 rounded-full mr-4">
              <svg
                class="w-6 h-6 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                ></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-green-800">Untuk Guru</h3>
          </div>
          <p class="text-gray-700 mb-4">
            Resources lengkap untuk mempersiapkan dan menyampaikan pelajaran
            sekolah minggu yang efektif.
          </p>
          <ul class="space-y-2 mb-6">
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Rencana pelajaran lengkap
            </li>
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Tips mengajar kreatif
            </li>
            <li class="flex items-center text-gray-600">
              <svg
                class="w-4 h-4 text-green-500 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              Alat peraga dan printable
            </li>
          </ul>
          <a
            href="/sekolah-minggu/untuk-guru"
            class="inline-flex items-center text-green-600 hover:text-green-800 font-semibold">
            Jelajahi untuk Guru
            <svg
              class="w-4 h-4 ml-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="bg-gradient-to-r from-green-600 to-blue-600 text-white rounded-2xl p-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Mulai Perjalanan Iman Bersama Anak-Anak
      </h2>
      <p class="text-lg text-green-100 mb-6 max-w-2xl mx-auto">
        Bergabunglah dengan komunitas guru dan orang tua yang berkomitmen untuk
        membimbing generasi muda mengenal kasih Tuhan Yesus melalui materi
        sekolah minggu yang alkitabiah dan kreatif.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/sekolah-minggu/cerita-alkitab"
          class="bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-green-50 transition-colors">
          Lihat Cerita Alkitab
        </a>
        <a
          href="/sekolah-minggu/panduan-guru"
          class="bg-transparent border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-colors">
          Panduan Guru
        </a>
      </div>
