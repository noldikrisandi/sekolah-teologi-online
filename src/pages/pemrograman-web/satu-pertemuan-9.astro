---
import PemrogramanWebLayout from "../../layouts/PemrogramanWebLayout.astro";

const currentUrl = Astro.url.pathname;
const invalidPath = currentUrl.replace('/pemrograman-web/', '');
---

<PemrogramanWebLayout
  title="Materi Sedang Dalam Pengembangan - Pemrograman Web"
  description="Materi pembelajaran Pemrograman Web ini sedang dalam proses pengembangan dan akan segera hadir."
>
  <section class="items-center justify-center px-4 py-20 bg-gradient-to-br from-blue-50 to-indigo-100">

    <!-- Main Content -->
    <div class="relative z-10 max-w-2xl mx-auto text-center">
      <!-- Animated Icon -->
      <div class="relative mb-8">
        <div class="w-32 h-32 mx-auto bg-white rounded-2xl shadow-2xl flex items-center justify-center border-2 border-blue-200">
          <div class="relative">
            <span class="text-6xl">ğŸš§</span>
            <div class="absolute -top-2 -right-2">
              <span class="flex h-4 w-4">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-yellow-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-4 w-4 bg-yellow-500"></span>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Status Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-yellow-100 border border-yellow-200 mb-6">
        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2 animate-pulse"></span>
        <span class="text-yellow-800 font-medium text-sm">SEDANG DALAM PENGEMBANGAN</span>
      </div>

      <!-- Main Message -->
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4 leading-tight">
        Materi Sedang
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Disusun
        </span>
      </h1>

      <p class="text-xl text-gray-600 mb-8 leading-relaxed">
        Kami sedang bekerja keras untuk menyiapkan materi 
        <span class="font-semibold text-gray-700">"{invalidPath.replace(/-/g, ' ')}"</span> 
        yang berkualitas untuk Anda.
      </p>

      <!-- Progress Info -->
      <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-200">
        <div class="flex items-center justify-between mb-3">
          <span class="text-sm font-medium text-gray-700">Status Pengembangan</span>
          <span class="text-sm font-bold text-blue-600">75%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2 rounded-full w-3/4 animate-pulse"></div>
        </div>
        <p class="text-sm text-gray-500 mt-3">
          Estimasi selesai: <span class="font-medium">2 minggu lagi</span>
        </p>
      </div>

      <!-- Features Coming Soon -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-4 border border-blue-100">
          <span class="text-2xl mb-2 block">ğŸ“š</span>
          <h3 class="font-semibold text-gray-800 mb-1">Materi Lengkap</h3>
          <p class="text-sm text-gray-600">Dari dasar hingga advanced</p>
        </div>
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-4 border border-green-100">
          <span class="text-2xl mb-2 block">ğŸ’»</span>
          <h3 class="font-semibold text-gray-800 mb-1">Praktikum</h3>
          <p class="text-sm text-gray-600">Contoh code & project</p>
        </div>
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-4 border border-purple-100">
          <span class="text-2xl mb-2 block">ğŸ¯</span>
          <h3 class="font-semibold text-gray-800 mb-1">Quiz Interaktif</h3>
          <p class="text-sm text-gray-600">Test pemahaman Anda</p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="/pemrograman-web"
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Kembali ke Materi Lainnya
        </a>
        
        <button
          onclick="alert('Fitur notifikasi akan tersedia soon!')"
          class="inline-flex items-center px-6 py-4 bg-white text-gray-700 font-medium rounded-xl border-2 border-gray-300 hover:border-blue-500 hover:text-blue-600 transition-all duration-300 shadow-md hover:shadow-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
          Notifikasi Saat Rilis
        </button>
      </div>

      <!-- Countdown Timer (Optional) -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          â° Tetap pantau untuk update terbaru!
        </p>
      </div>
    </div>
  </section>

  <style>
    .animation-delay-2000 {
      animation-delay: 2s;
    }
    .animation-delay-4000 {
      animation-delay: 4s;
    }
  </style>
</PemrogramanWebLayout>