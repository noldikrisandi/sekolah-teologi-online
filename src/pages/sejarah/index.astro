---
// src/pages/sejarah/index.astro
import SejarahLayout from "../../layouts/SejarahLayout.astro";

// Data untuk SEO dan konten
const pageData = {
  title: "Sejarah Alkitab - Pelajaran Lengkap Perjalanan Umat Tuhan",
  description: "Jelajahi sejarah Alkitab secara mendalam dari zaman penciptaan hingga gereja mula-mula. Pelajari periode sejarah, tokoh-tokoh penting, dan bukti arkeologi yang mendukung kebenaran Firman Tuhan.",
  image: "/images/banner/sejarah-alkitab.webp"
};

// Data artikel untuk schema
const articles = [
  {
    title: "Zaman Patriakh: Abraham, Ishak, dan Yakub",
    description: "Perjalanan iman para bapa leluhur Israel dan perjanjian Tuhan",
    url: "/sejarah/patriakh",
    image: "/images/sejarah/patriakh.webp",
    datePublished: "2024-01-15",
    author: "Tim Sekolah Teologi"
  },
  {
    title: "Keluaran dari Mesir: Mukjizat dan Pembebasan",
    description: "Kisah pembebasan bangsa Israel dari perbudakan Mesir",
    url: "/sejarah/keluaran", 
    image: "/images/sejarah/keluaran.webp",
    datePublished: "2024-01-20",
    author: "Tim Sekolah Teologi"
  },
  {
    title: "Kerajaan Bersatu Israel: Daud dan Salomo",
    description: "Masa keemasan kerajaan Israel di bawah raja Daud dan Salomo",
    url: "/sejarah/kerajaan-bersatu",
    image: "/images/sejarah/kerajaan-bersatu.webp",
    datePublished: "2024-01-25",
    author: "Tim Sekolah Teologi"
  }
];

// Breadcrumbs untuk schema
const breadcrumbs = [
  { name: "Home", url: "https://sekolahteologi.com/" },
  { name: "Sejarah Alkitab", url: "https://sekolahteologi.com/sejarah" }
];
---

<SejarahLayout
  title={pageData.title}
  description={pageData.description}
  image={pageData.image}
  url="sejarah"
  type="website"
  articles={articles}
  breadcrumbs={breadcrumbs}
>

<!-- Hero Section -->
<section class="bg-gradient-to-r from-sky-600 to-sky-800 text-white py-16 rounded-2xl mb-12">
  <div class="max-w-4xl mx-auto text-center px-4">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
      Sejarah dalam Alkitab
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-sky-100 leading-relaxed">
      Menelusuri Perjalanan Iman Umat Tuhan dari Masa ke Masa
    </p>
    <p class="text-lg text-sky-200 max-w-3xl mx-auto leading-relaxed">
      Temukan kedalaman makna dan konteks historis di balik setiap peristiwa dalam Alkitab. 
      Dari penciptaan hingga gereja mula-mula, pahami bagaimana Tuhan bekerja dalam sejarah.
    </p>
  </div>
</section>

<!-- Overview Section -->
<section class="mb-16">
  <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Mengapa Mempelajari Sejarah Alkitab?</h2>
    
    <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="bg-sky-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Kontekstual</h3>
        <p class="text-gray-600">Memahami latar belakang budaya, politik, dan sosial setiap peristiwa Alkitab</p>
      </div>
      
      <div class="text-center">
        <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Arkeologi</h3>
        <p class="text-gray-600">Bukti-bukti sejarah yang mendukung keakuratan catatan Alkitab</p>
      </div>
      
      <div class="text-center">
        <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Tokoh</h3>
        <p class="text-gray-600">Belajar dari kehidupan dan iman para tokoh Alkitab dalam konteks zamannya</p>
      </div>
    </div>
  </div>
</section>

<!-- Timeline Overview -->
<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Garis Waktu Sejarah Alkitab</h2>
  
  <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200">
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-sky-200 h-full"></div>
      
      <!-- Timeline items -->
      <div class="space-y-12">
        <!-- Item 1 -->
        <div class="flex items-center">
          <div class="w-1/2 pr-8 text-right">
            <h3 class="text-xl font-bold text-sky-800 mb-2">Zaman Patriakh</h3>
            <p class="text-gray-600 mb-2">± 2000 - 1500 SM</p>
            <p class="text-gray-700">Abraham, Ishak, Yakub, dan para bapa leluhur Israel</p>
            <a href="/sejarah/patriakh" class="inline-block mt-2 text-sky-600 hover:text-sky-800 font-semibold">
              Pelajari lebih lanjut →
            </a>
          </div>
          <div class="w-8 h-8 bg-sky-600 rounded-full border-4 border-white z-10"></div>
          <div class="w-1/2 pl-8">
            <div class="bg-sky-50 p-4 rounded-lg">
              <h4 class="font-semibold text-sky-800">Perjanjian Tuhan</h4>
              <p class="text-sm text-gray-600">Janji keturunan dan tanah perjanjian</p>
            </div>
          </div>
        </div>
        
        <!-- Item 2 -->
        <div class="flex items-center">
          <div class="w-1/2 pr-8 text-right">
            <div class="bg-red-50 p-4 rounded-lg">
              <h4 class="font-semibold text-red-800">Perbudakan & Pembebasan</h4>
              <p class="text-sm text-gray-600">Bangsa Israel di Mesir dan keluaran</p>
            </div>
          </div>
          <div class="w-8 h-8 bg-red-600 rounded-full border-4 border-white z-10"></div>
          <div class="w-1/2 pl-8">
            <h3 class="text-xl font-bold text-red-800 mb-2">Keluaran & Pengembaraan</h3>
            <p class="text-gray-600 mb-2">± 1500 - 1400 SM</p>
            <p class="text-gray-700">Musa, 10 Tulah, Keluaran dari Mesir, 10 Perintah</p>
            <a href="/sejarah/keluaran" class="inline-block mt-2 text-red-600 hover:text-red-800 font-semibold">
              Pelajari lebih lanjut →
            </a>
          </div>
        </div>
        
        <!-- Item 3 -->
        <div class="flex items-center">
          <div class="w-1/2 pr-8 text-right">
            <h3 class="text-xl font-bold text-green-800 mb-2">Kerajaan Bersatu</h3>
            <p class="text-gray-600 mb-2">± 1050 - 930 SM</p>
            <p class="text-gray-700">Raja Saul, Daud, Salomo - masa keemasan Israel</p>
            <a href="/sejarah/kerajaan-bersatu" class="inline-block mt-2 text-green-600 hover:text-green-800 font-semibold">
              Pelajari lebih lanjut →
            </a>
          </div>
          <div class="w-8 h-8 bg-green-600 rounded-full border-4 border-white z-10"></div>
          <div class="w-1/2 pl-8">
            <div class="bg-green-50 p-4 rounded-lg">
              <h4 class="font-semibold text-green-800">Bait Suci & Kemakmuran</h4>
              <p class="text-sm text-gray-600">Pembangunan Bait Suci pertama oleh Salomo</p>
            </div>
          </div>
        </div>
        
        <!-- Item 4 -->
        <div class="flex items-center">
          <div class="w-1/2 pr-8 text-right">
            <div class="bg-purple-50 p-4 rounded-lg">
              <h4 class="font-semibold text-purple-800">Pembuangan & Nubuat</h4>
              <p class="text-sm text-gray-600">Nabi-nabi menyampaikan firman Tuhan</p>
            </div>
          </div>
          <div class="w-8 h-8 bg-purple-600 rounded-full border-4 border-white z-10"></div>
          <div class="w-1/2 pl-8">
            <h3 class="text-xl font-bold text-purple-800 mb-2">Kerajaan Terpecah & Pembuangan</h3>
            <p class="text-gray-600 mb-2">± 930 - 538 SM</p>
            <p class="text-gray-700">Israel & Yehuda, pembuangan ke Babel, nabi-nabi</p>
            <a href="/sejarah/kerajaan-terpecah" class="inline-block mt-2 text-purple-600 hover:text-purple-800 font-semibold">
              Pelajari lebih lanjut →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Articles -->
<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Artikel Sejarah Pilihan</h2>
  
  <div class="grid md:grid-cols-2 2xl:grid-cols-3 gap-8">
    <!-- Article 1 -->
    <article class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <img src="/images/sejarah/patriakh.webp" alt="Zaman Patriakh" class="w-full h-48 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-3">Zaman Patriakh</h3>
        <p class="text-gray-600 mb-4">Perjalanan iman Abraham, Ishak, dan Yakub sebagai bapa leluhur bangsa Israel...</p>
        <a href="/sejarah/patriakh" class="inline-flex items-center text-sky-600 hover:text-sky-800 font-semibold">
          Baca selengkapnya
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </article>
    
    <!-- Article 2 -->
    <article class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <img src="/images/sejarah/keluaran.webp" alt="Keluaran dari Mesir" class="w-full h-48 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-3">Keluaran dari Mesir</h3>
        <p class="text-gray-600 mb-4">Mukjizat pembebasan bangsa Israel dari perbudakan Mesir di bawah pimpinan Musa...</p>
        <a href="/sejarah/keluaran" class="inline-flex items-center text-sky-600 hover:text-sky-800 font-semibold">
          Baca selengkapnya
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </article>
    
    <!-- Article 3 -->
    <article class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <img src="/images/sejarah/kerajaan-bersatu.webp" alt="Kerajaan Bersatu Israel" class="w-full h-48 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-3">Kerajaan Bersatu Israel</h3>
        <p class="text-gray-600 mb-4">Masa keemasan Israel di bawah raja Daud dan Salomo, termasuk pembangunan Bait Suci...</p>
        <a href="/sejarah/kerajaan-bersatu" class="inline-flex items-center text-sky-600 hover:text-sky-800 font-semibold">
          Baca selengkapnya
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </article>
    
    <!-- Article 4 -->
    <article class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <img src="/images/sejarah/kerajaan-bersatu.webp" alt="Kerajaan Bersatu Israel" class="w-full h-48 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-3">Kerajaan Bersatu Israel</h3>
        <p class="text-gray-600 mb-4">Masa keemasan Israel di bawah raja Daud dan Salomo, termasuk pembangunan Bait Suci...</p>
        <a href="/sejarah/kerajaan-bersatu" class="inline-flex items-center text-sky-600 hover:text-sky-800 font-semibold">
          Baca selengkapnya
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </article>
  </div>
</section>

<!-- CTA Section -->
<section class="bg-gradient-to-r from-sky-600 to-sky-800 text-white rounded-2xl p-8 text-center">
  <h2 class="text-2xl md:text-3xl font-bold mb-4">Mulai Perjalanan Sejarah Anda</h2>
  <p class="text-lg text-sky-100 mb-6 max-w-2xl mx-auto">
    Jelajahi kekayaan sejarah Alkitab dan temukan bagaimana Tuhan bekerja melalui peristiwa-peristiwa sejarah untuk menyatakan rencana keselamatan-Nya.
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <a href="/sejarah/timeline" class="bg-white text-sky-600 px-6 py-3 rounded-lg font-semibold hover:bg-sky-50 transition-colors">
      Lihat Timeline Lengkap
    </a>
    <a href="/sejarah/arkeologi" class="bg-transparent border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-sky-600 transition-colors">
      Bukti Arkeologi
    </a>
  </div>
</section>

</SejarahLayout>